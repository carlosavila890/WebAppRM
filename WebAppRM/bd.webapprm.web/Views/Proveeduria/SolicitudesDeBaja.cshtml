@model List<bd.webapprm.entidades.SolicitudProveeduriaDetalle>

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Listado de Solicitudes de Baja</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>
                                            Art&iacute;culo
                                        </th>                                        
                                        <th>
                                            Fecha de Solicitud
                                        </th>
                                        <th>
                                            Empleado
                                        </th>
                                        <th>
                                            Cantidad Solicitada
                                        </th>                                        
                                        <th>
                                            Opciones
                                        </th>                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Articulo.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaSolicitud)
                                            </td>

                                            <td>
                                                @{ await ViewContext.Writer.WriteAsync(String.Format("{0} {1}", item.SolicitudProveeduria.Empleado.Persona.Nombres, item.SolicitudProveeduria.Empleado.Persona.Apellidos));}
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.CantidadSolicitada)
                                            </td>
                                            <td>
                                                <a href="#">@Html.ActionLink("Aprobar Baja", "AprobarBajaArticulo", "Proveeduria", new { ID = item.IdSolicitudProveeduriaDetalle })</a>
                                            </td>                                            
                                        </tr>
                                   }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/js/datatables/init.js'></script>
}

@model bd.webapprm.entidades.Proveedor

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Proveedor</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="Edit" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="IdProveedor" />
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Codigo"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Codigo" class="form-control" />
                                                <span asp-validation-for="Codigo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Nombre"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Nombre" class="form-control" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Apellidos"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Apellidos" class="form-control" />
                                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Identificacion"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Identificacion" class="form-control" />
                                                <span asp-validation-for="Identificacion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="LineaServicio"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="LineaServicio" class="form-control" />
                                                <span asp-validation-for="LineaServicio" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="RazonSocial"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="RazonSocial" class="form-control" />
                                                <span asp-validation-for="RazonSocial" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Telefono"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Telefono" class="form-control" />
                                                <span asp-validation-for="Telefono" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Email"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Email" class="form-control" />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Cargo"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Cargo" class="form-control" />
                                                <span asp-validation-for="Cargo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Emision"></label>
                                        </section>
                                        <section class="col col-8">
                                            <label class="input">
                                                <input asp-for="Emision" class="form-control" />
                                                <span asp-validation-for="Emision" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Direccion"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <textarea asp-for="Direccion" class="form-control paddingTextArea" rows="4"></textarea>
                                                <span asp-validation-for="Direccion" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Observaciones"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <textarea asp-for="Observaciones" class="form-control paddingTextArea" rows="4"></textarea>
                                                <span asp-validation-for="Observaciones" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="Activo"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="toggle" style="float:left;padding-right:50px !important;">
                                                <input type="checkbox" name="checkbox-toggle" asp-for="Activo">
                                                <i data-swchon-text="SI" data-swchoff-text="NO"></i>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model List<bd.webapprm.entidades.RecepcionActivoFijoDetalle>

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Activos Fijos a Transferir</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().IdActivoFijo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().ActivoFijo.SubClaseActivoFijo.ClaseActivoFijo.IdTipoActivoFijo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().ActivoFijo.SubClaseActivoFijo.IdClaseActivoFijo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().UbicacionActivoFijo.FirstOrDefault().LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().UbicacionActivoFijo.FirstOrDefault().LibroActivoFijo.Sucursal.Ciudad.IdProvincia)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().UbicacionActivoFijo.FirstOrDefault().LibroActivoFijo.Sucursal.IdCiudad)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().UbicacionActivoFijo.FirstOrDefault().LibroActivoFijo.IdSucursal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().RecepcionActivoFijo.IdProveedor)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().RecepcionActivoFijo.FechaRecepcion)
                                        </th>
                                        <th>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ActivoFijo.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ActivoFijo.SubClaseActivoFijo.ClaseActivoFijo.TipoActivoFijo.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.ActivoFijo.SubClaseActivoFijo.ClaseActivoFijo.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.UbicacionActivoFijo.FirstOrDefault().LibroActivoFijo.Sucursal.Ciudad.Provincia.Pais.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.UbicacionActivoFijo.FirstOrDefault().LibroActivoFijo.Sucursal.Ciudad.Provincia.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.UbicacionActivoFijo.FirstOrDefault().LibroActivoFijo.Sucursal.Ciudad.Nombre)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.UbicacionActivoFijo.FirstOrDefault().LibroActivoFijo.Sucursal.Nombre)
                                            </td>

                                            <td>
                                                @{ await ViewContext.Writer.WriteAsync(String.Format("{0} {1}", item.RecepcionActivoFijo.Proveedor.Nombre, item.RecepcionActivoFijo.Proveedor.Apellidos)); }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RecepcionActivoFijo.FechaRecepcion)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Transferir", "TransferirActivoFijo", new { id = item.IdRecepcionActivoFijoDetalle })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/js/datatables/init.min.js'></script>
}

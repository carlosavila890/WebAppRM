@model AltaActivoFijo
<div class="row">
    <section class="col col-4">
        <label asp-for="FacturaActivoFijo.NumeroFactura"></label>
    </section>

    <section class="col col-8">
        <label class="input">
            <input asp-for="FacturaActivoFijo.NumeroFactura" class="form-control" />
            <span asp-validation-for="FacturaActivoFijo.NumeroFactura" class="text-danger"></span>
        </label>
    </section>
</div>

<div class="row">
    <section class="col col-4">
        <label asp-for="FacturaActivoFijo.FechaFactura"></label>
    </section>

    <section class="col col-8">
        <label class="input">
            <input asp-for="FacturaActivoFijo.FechaFactura" class="form-control" />
            <span asp-validation-for="FacturaActivoFijo.FechaFactura" class="text-danger"></span>
        </label>
    </section>
</div>

<legend>Documento escaneado de la Factura</legend>
<div class="row margin-top-25">
    <section class="col col-12 width100">
        <input type="file" id="fileFactura" name="fileFactura" />
    </section>
</div>
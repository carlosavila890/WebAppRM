@model AltaActivoFijo
@{
    List<RecepcionActivoFijoDetalleSeleccionado> listadoRecepcionActivoFijoDetalleSeleccionado = ViewBag.ListadoRecepcionActivoFijoDetalleSeleccionado;
}

@section css{
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/tableSmartForm.min.css" />
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Alta de Activos Fijos</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body no-padding">
                            <form asp-action="GestionarAlta" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @{
                                    if (Model != null)
                                    {
                                        <input type="hidden" asp-for="IdAltaActivoFijo" />
                                    }
                                }
                                <fieldset>
                                    <legend>Informaci&oacute;n General</legend>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="IdMotivoAlta"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="IdMotivoAlta" class="form-control" asp-items="ViewBag.MotivoAlta"></select>
                                                <span asp-validation-for="IdMotivoAlta" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div id="divOpcionCompra">
                                        @{
                                            if (Model == null || Model?.MotivoAlta?.Descripcion == "Compra")
                                            {
                                                await Html.RenderPartialAsync("_DetalleFacturaAltaActivos", Model);
                                            }
                                        }
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="RecepcionActivoFijoDetalleAltaActivoFijo.FirstOrDefault().IdTipoUtilizacionAlta"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="RecepcionActivoFijoDetalleAltaActivoFijo.FirstOrDefault().IdTipoUtilizacionAlta" class="form-control" asp-items="ViewBag.TipoUtilizacionAlta"></select>
                                                <span asp-validation-for="RecepcionActivoFijoDetalleAltaActivoFijo.FirstOrDefault().IdTipoUtilizacionAlta" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <legend>Activos Fijos seleccionados</legend>
                                    <div class="row margin-top-10">
                                        <section class="col col-12">
                                            <p>
                                                <button type="button" class="btn btn-primary" style="padding:7px !important;margin-left:7px !important;" onclick="cargarListadoActivosFijosParaSeleccion()" id="btnAdicionarActivosFijos" data-toggle="modal" data-target="#myModal">Adicionar / Eliminar Activos Fijos</button>
                                            </p>
                                            @{await Html.RenderPartialAsync("_ListadoDetallesActivosFijos", listadoRecepcionActivoFijoDetalleSeleccionado);}
                                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                <div class="modal-dialog  modal-lg" style="margin-left:8% !important;margin-top:30px !important;width:85% !important;">
                                                    <div class="modal-content" id="modalContentDatosEspecificos">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="padding:10px !important;">
                                                                &times;
                                                            </button>
                                                            <h4 class="modal-title" id="myModalLabel" style="padding:12px !important;">Listado de Activos Fijos</h4>
                                                        </div>
                                                        <div class="modal-body" style="padding:15px !important;padding-top:10px !important;" id="modalBodyDatosEspecificos"></div>
                                                        <div class="modal-footer" style="padding:15px !important;">
                                                            <button type="button" class="btn btn-default" id="btnCancelarDatosEspecificos" data-dismiss="modal" style="padding:7px !important;">Cancelar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @{await Html.RenderPartialAsync("_ModalComponentes", listadoRecepcionActivoFijoDetalleSeleccionado);}
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_Select2ScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_DatetimePickerScriptsPartial");}
    @*<script src='~/js/activoFijo/listadoSeleccion.min.js'></script>*@
    <script src='~/js/activoFijo/componentes.min.js'></script>
    <script src="~/js/activoFijo/alta.js"></script>
    <script>
        var urlDetalleFacturaAltaActivos = "@Url.Action("DetalleFacturaAltaActivosResult")";
        var urlListadoActivosFijosResult = "@Url.Action("ListadoActivosFijosResult")";
    </script>
}
@model bd.webapprm.entidades.TransferenciaActivoFijoDetalle

@section css{
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
}
<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Datos a llenar para Transferencia de Activos Fijos</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="TransferirActivoFijo" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                    <input type="hidden" id="IdActivoFijo" name="IdActivoFijo" value="@ViewBag.IdActivoFijo" />
                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Motivo de Transferencia</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="TransferenciaActivoFijo.IdMotivoTransferencia" class="form-control" asp-items="ViewBag.MotivoTransferencia"></select>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>

                                <fieldset>
                                    <legend>Datos del Origen del Activo Fijo</legend>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Pa&iacute;s</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select class="form-control" asp-items="ViewBag.PaisOrigen" disabled="disabled"></select>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Provincia</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select class="form-control" asp-items="ViewBag.ProvinciaOrigen" disabled="disabled"></select>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Ciudad</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select class="form-control" asp-items="ViewBag.CiudadOrigen" disabled="disabled"></select>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Sucursal</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select class="form-control" asp-items="ViewBag.SucursalOrigen" disabled="disabled"></select>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Libro de Activo Fijo</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select class="form-control" asp-items="ViewBag.LibroActivoFijoOrigen" disabled="disabled"></select>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>

                                <fieldset>
                                    <legend>Datos del Destino del Activo Fijo (Seleccionar)</legend>
                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.Pais.Nombre"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="form-control" asp-items="ViewBag.Pais"></select>
                                                <span asp-validation-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.Nombre"></label>
                                        </section>

                                        <div id="div_provincia">
                                            @{ await Html.RenderPartialAsync("_ProvinciaSelect", new bd.webapprm.entidades.RecepcionActivoFijoDetalle()); }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Nombre"></label>
                                        </section>

                                        <div id="div_ciudad">
                                            @{ await Html.RenderPartialAsync("_CiudadSelect", new bd.webapprm.entidades.RecepcionActivoFijoDetalle()); }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Nombre"></label>
                                        </section>

                                        <div id="div_sucursal">
                                            @{ await Html.RenderPartialAsync("_SucursalSelect", new bd.webapprm.entidades.RecepcionActivoFijoDetalle()); }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.IdLibroActivoFijo"></label>
                                        </section>

                                        <div id="div_libroActivoFijo">
                                            @{ await Html.RenderPartialAsync("_LibroActivoFijoSelect", new bd.webapprm.entidades.RecepcionActivoFijoDetalle()); }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="TransferenciaActivoFijo.IdEmpleadoRegistra"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="TransferenciaActivoFijo.IdEmpleadoRegistra" class="form-control" asp-items="ViewBag.Empleado"></select>
                                                <span asp-validation-for="TransferenciaActivoFijo.IdEmpleadoRegistra" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="TransferenciaActivoFijo.IdEmpleadoResponsableEnvio"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="TransferenciaActivoFijo.IdEmpleadoResponsableEnvio" class="form-control" asp-items="ViewBag.Empleado"></select>
                                                <span asp-validation-for="TransferenciaActivoFijo.IdEmpleadoResponsableEnvio" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="TransferenciaActivoFijo.IdEmpleadoResponsableRecibo"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="TransferenciaActivoFijo.IdEmpleadoResponsableRecibo" class="form-control" asp-items="ViewBag.Empleado"></select>
                                                <span asp-validation-for="TransferenciaActivoFijo.IdEmpleadoResponsableRecibo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="TransferenciaActivoFijo.IdEmpleadoRecibo"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="TransferenciaActivoFijo.IdEmpleadoRecibo" class="form-control" asp-items="ViewBag.Empleado"></select>
                                                <span asp-validation-for="TransferenciaActivoFijo.IdEmpleadoRecibo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Observaciones</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="textarea textarea-resizable">
                                                <textarea asp-for="TransferenciaActivoFijo.Observaciones" rows="4" class="custom-scroll"></textarea>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <button type="submit" class="btn btn-primary" id="btn-guardar">Guardar</button>
                                    <a asp-action="ActivosFijosATransferir" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_Select2ScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src='~/js/activoFijo/transferencia.js'></script>
    <script type="text/javascript">
        var provinciaSelectResult = "@Url.Action("Provincia_SelectResult")";
        var ciudadSelectResult = "@Url.Action("Ciudad_SelectResult")";
        var sucursalSelectResult = "@Url.Action("Sucursal_SelectResult")";
        var libroActivoFijoSelectResult = "@Url.Action("LibroActivoFijo_SelectResult")";
    </script>
}


@model bd.webapprm.entidades.RecepcionActivoFijoDetalle
@{
    ViewData["Title"] = "TransferirActivoFijo";

    List<SelectListItem> listaMT = new List<SelectListItem>();
    listaMT = ViewBag.listaMT;

    List<SelectListItem> listaP = new List<SelectListItem>();
    listaP = ViewBag.listaP;

    SelectList listaE = ViewBag.Empleado;
    SelectList listaPO = ViewBag.PaisO;
    SelectList listaProvO = ViewBag.ProvinciaO;
    SelectList listaCO = ViewBag.CiudadO;
    SelectList listaSO = ViewBag.SucursalO;
}

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
<link rel="stylesheet" href="~/lib/waitMe/waitMe.min.css" />

<div id="content">
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-6">
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Datos a llenar para Transferencia de Activos Fijos</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form asp-action="GuardarTransferencia" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                    <input type="hidden" asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Nombre" />
                                    <input type="hidden" asp-for="IdRecepcionActivoFijoDetalle" />
                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Motivo de Transferencia</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                @Html.DropDownList("motivoTransferencia", listaMT, new { @class = "form-control" })
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-12">
                                            <label><strong>Datos del Origen del Activo Fijo</strong></label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Pa&iacute;s</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                @Html.DropDownList("paisOrigen", listaPO.Select(x => new SelectListItem { Value = x.Value, Text = x.Text, Selected = (x.Value == Model.ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais.ToString()) }), new { @class = "form-control", disabled = "disabled" })
                                                @*<select asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="form-control" asp-items="ViewBag.PaisO" disabled></select>*@
                                                <span asp-validation-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Provincia</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                @Html.DropDownList("provinciaOrigen", listaProvO.Select(x => new SelectListItem { Value = x.Value, Text = x.Text, Selected = (x.Value == Model.ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdProvincia.ToString()) }), new { @class = "form-control", disabled = "disabled" })
                                                @*<select asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="form-control" asp-items="ViewBag.PaisO" disabled></select>*@
                                                <span asp-validation-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdProvincia" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Ciudad</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                @Html.DropDownList("ciudadOrigen", listaCO.Select(x => new SelectListItem { Value = x.Value, Text = x.Text, Selected = (x.Value == Model.ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.IdCiudad.ToString()) }), new { @class = "form-control", disabled = "disabled" })
                                                @*<select asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="form-control" asp-items="ViewBag.PaisO" disabled></select>*@
                                                <span asp-validation-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdProvincia" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Sucursal</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                @Html.DropDownList("sucursalOrigen", listaSO.Select(x => new SelectListItem { Value = x.Value, Text = x.Text, Selected = (x.Value == Model.ActivoFijo.LibroActivoFijo.Sucursal.IdSucursal.ToString()) }), new { @class = "form-control", disabled = "disabled" })
                                                @*<select asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="form-control" asp-items="ViewBag.PaisO" disabled></select>*@
                                                <span asp-validation-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdProvincia" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-12">
                                            <label><strong>Datos del Destino del Activo Fijo (Seleccionar)</strong></label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.Pais.Nombre"></label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                <select asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="form-control" asp-items="ViewBag.Pais"></select>
                                                <span asp-validation-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.IdPais" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Provincia.Nombre"></label>
                                        </section>

                                        <div id="div_provincia">
                                            @{ await Html.RenderPartialAsync("_ProvinciaSelect", Model); }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Ciudad.Nombre"></label>
                                        </section>

                                        <div id="div_ciudad">
                                            @{ await Html.RenderPartialAsync("_CiudadSelect", Model); }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="ActivoFijo.LibroActivoFijo.Sucursal.Nombre"></label>
                                        </section>

                                        <div id="div_sucursal">
                                            @{ await Html.RenderPartialAsync("_SucursalSelect", Model); }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="RecepcionActivoFijo.IdEmpleado">Responsable de env&iacute;o</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                @*<select class="form-control" asp-items="ViewBag.Empleado"></select>*@
                                                @Html.DropDownList("empleadoEnvia", listaE, new { @class = "form-control" })
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label asp-for="RecepcionActivoFijo.IdEmpleado">Responsable de recibo</label>
                                        </section>

                                        <section class="col col-8">
                                            <label class="input">
                                                @Html.DropDownList("empleadoRecibe", listaE, new { @class = "form-control" })
                                            </label>
                                        </section>
                                    </div>

                                    <div class="row">
                                        <section class="col col-4">
                                            <label>Observaciones</label>                                            
                                        </section>

                                        <section class="col col-8">
                                            <label class="textarea textarea-resizable">
                                                <textarea rows="3" class="custom-scroll" name="observaciones"></textarea>
                                            </label>
                                        </section>
                                    </div>

                                </fieldset>
                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <input type="submit" value="Transferir" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/js/site.js'></script>
    <script src='~/lib/waitMe/waitMe.min.js'></script>
    <script src='~/js/activoFijo/transferencia.js'></script>
    <script type="text/javascript">
        var provinciaSelectResult = "@Url.Action("Provincia_SelectResult")";
        var ciudadSelectResult = "@Url.Action("Ciudad_SelectResult")";
        var sucursalSelectResult = "@Url.Action("Sucursal_SelectResult")";
        var libroActivoFijoSelectResult = "@Url.Action("LibroActivoFijo_SelectResult")";

        $(document).ready(function () {
            Init_Select2();
        });
    </script>
}


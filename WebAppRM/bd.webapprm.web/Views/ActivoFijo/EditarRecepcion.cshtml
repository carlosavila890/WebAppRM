        var ciudadSelectResult = "@Url.Action("Ciudad_SelectResult")";
        var sucursalSelectResult = "@Url.Action("Sucursal_SelectResult")";
        var libroActivoFijoSelectResult = "@Url.Action("LibroActivoFijo_SelectResult")";

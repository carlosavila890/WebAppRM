                                <input type="hidden" asp-for="IdActivoFijo" />
                                <input type="hidden" asp-for="IdEstado" />
                                <input type="hidden" asp-for="RecepcionActivoFijo.IdRecepcionActivoFijo" />
                                <input type="hidden" asp-for="ActivoFijo.IdActivoFijo" />
                                <input type="hidden" asp-for="ActivoFijo.IdCodigoActivoFijo" />
                                <input type="hidden" asp-for="ActivoFijo.CodigoActivoFijo.IdCodigoActivoFijo" />
                                <input type="hidden" asp-for="ActivoFijo.CodigoActivoFijo.CodigoBarras" />
                                <input type="hidden" asp-for="ActivoFijo.CodigoActivoFijo.Codigosecuencial" />
                                <input type="hidden" asp-for="Estado.IdEstado" />
                                <fieldset>
                                    <div class="widget-body fuelux">
                                        <div class="wizard">
                                            <ul class="steps">
                                                <li data-target="#step1" class="active">

@model bd.webapprm.entidades.MaestroDetalleArticulo

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" /><link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />

<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-4">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Maestro Detalle Art&iacute;culo</h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            <form asp-action="Create" id="checkout-form" class="smart-form" novalidate="novalidate">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-10">
                                            <label>Art&iacute;culo</label>
                                            <label class="input">
                                                <select asp-for="IdArticulo" class="form-control" asp-items="ViewBag.IdArticulo"></select>
                                                <span asp-validation-for="IdArticulo" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-3">
                                            <label>M&iacute;nimo</label>
                                            <label class="input">
                                                <select asp-for="IdMaestroArticuloSucursal" class="form-control" asp-items="ViewBag.Minimo"></select>
                                                <span asp-validation-for="IdMaestroArticuloSucursal" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-3">
                                            <label>M&aacute;ximo</label>
                                            <label class="input">
                                                <select asp-for="IdMaestroArticuloSucursal" class="form-control" asp-items="ViewBag.Maximo"></select>
                                                <span asp-validation-for="IdMaestroArticuloSucursal" class="text-danger"></span>
                                            </label>
                                        </section>
                                        <section class="col col-4">
                                            <label>Cantidad</label>
                                            <label class="input">
                                                <input maxlength="32" asp-for="Cantidad" class="form-control" placeholder="@Html.DisplayNameFor(model=>model.Cantidad)" />
                                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>

                                <footer>
                                    <span class="text-danger">@ViewData["Error"]</span>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-default">Cancelar</a>

                                </footer>

                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>

        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
    <!-- Modal -->
</div>

@section Scripts {
    <script src='~/lib/select2/dist/js/select2.min.js'></script>
    <script src='~/lib/select2/dist/js/i18n/es.js'></script>
    <script src='~/js/site.js'></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Init_Select2();
        });
    </script>
}
